<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/action_button_padding">
    <include layout="@layout/toolbar" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/detailsView"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageQr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/action_button_padding"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/familyId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingVertical="10dp"
            android:gravity="center"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/buttonDownload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/action_button_padding"
        android:layout_marginVertical="8dp"
        android:background="@drawable/listview_button_selector"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Download"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:textAppearance="@style/CustomAnswerView"
        android:textColor="@drawable/listview_button_color_selector"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/buttonShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/action_button_padding"
        android:layout_marginVertical="8dp"
        android:background="@drawable/listview_button_selector"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Share"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:textAppearance="@style/CustomAnswerView"
        android:textColor="@drawable/listview_button_color_selector"
        android:textStyle="bold" />
</LinearLayout>