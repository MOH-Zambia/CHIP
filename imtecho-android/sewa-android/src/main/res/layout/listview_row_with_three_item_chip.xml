<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/listview_selector"
    android:orientation="vertical"
    android:padding="10dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/list_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingBottom="2dp"
        tools:text="FM/232/asdasdadsa"
        android:textAppearance="@style/ListTextView"
        android:textColor="@color/placeHolderTextColor"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_first_text_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:lines="1"
            tools:text="A3213123123N"
            android:textAppearance="@style/ListTextView"
            android:textColor="@color/listview_text_color_selector"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_first_text_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/dash"
            android:textAppearance="@style/ListTextView"
            android:textColor="@color/listview_text_color_selector"
            android:textSize="14sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_first_text_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:lines="1"
            tools:text="Utkarsh"
            android:textAppearance="@style/ListTextView"
            android:textColor="@color/listview_text_color_selector"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_second_text_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            tools:text="56 years"
            android:lines="1"
            android:textAppearance="@style/ListTextView"
            android:textColor="@color/listview_text_color_selector"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_second_text_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/vertical_line"
            android:textAppearance="@style/ListTextView"
            android:textColor="@color/listview_text_color_selector"
            android:textSize="14sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_second_text_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:lines="1"
            tools:text="Male"
            android:textAppearance="@style/ListTextView"
            android:textColor="@color/listview_text_color_selector"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>